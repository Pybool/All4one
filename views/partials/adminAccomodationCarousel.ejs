<script>
    // Auto Switching Images for CSS-Slider
    var lastBanner = null;
    var lastLabel = null;

    function bannerSwitcher() {
        const modal = document.getElementById('admin-accomodation-modal')
        if (modal.style.display == 'block') {
            if (lastBanner) {
                lastBanner.style.opacity = '0';
            }

            if (lastLabel) {
                lastLabel.querySelector('span').removeAttribute('style')
            }
            try{
                next = $('.sec-1-input').filter(':checked').next('.sec-1-input');
            }
            catch{
                next = document.querySelector('.sec-1-input:checked')?.nextElementSibling;
                console.log("Initial next ", next)

            }
            let id = next[0]?.id;
            if(!id){
                id = next?.id
            }
            console.log("Next id ", id)
            const split = id?.split('banner');
            let val = 0;
            
            if(parseInt(split[1]) >= 1){
                
            }
            console.log("Setting ", parseInt(split[1]) - 1)
            document.getElementById('img-index').value = parseInt(split[1]) - 1;
            
            if (next.length) {
                next.prop('checked', true);
                const bannerId = 'top-' + 'banner' + '-' + (parseInt(split[1]) - 1)
                const banner = document.getElementById(bannerId);
                banner.style.opacity = '1';
                lastBanner = banner;
                const labels = document.querySelector(`.controls`).childNodes;
                const label = labels[parseInt(split[1]) - 2];
                if (label) {
                    label.querySelector('.progressbar-fill').style.animation = 'progressBarFill 5s linear';
                    lastLabel = label;
                }

            }

            else {
                $('.sec-1-input').first().prop('checked', true);
                const labels = document.querySelector(`.controls`).childNodes;
                const bannerId = `top-banner-${parseInt(labels.length)}`
                const banner = document.getElementById(bannerId);
                banner.style.opacity = '1';
                lastBanner = banner;
                const label = labels[labels.length - 1];
                if (label) {
                    label.querySelector('.progressbar-fill').style.animation = 'progressBarFill 5s linear';
                    lastLabel = label;
                }
            }
            if(document.querySelector('.img-load-spinner')){
                document.querySelector('.img-load-spinner').style.display = 'none'
            }
        }

    }
    
