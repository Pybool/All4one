<style>
  .img {
    border-radius: 15px;
    margin-top: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    object-fit: contain;
    background: black;
  }

  .certs {

    justify-content: space-evenly;
    flex-wrap: wrap;
    margin-bottom: 40px;

  }

  .regs {
    width: 250px !important;
    height: 150px !important;
    object-fit: fill;
    cursor: pointer;
    border-radius: 20px !important;
  }

  .zoom-ns {
    transition: transform 1.5s;
  }

  .zoom-ns:hover {
    transform: scale(1.125);
  }

  .regs:hover+.tooltip {
    visibility: visible;
    opacity: 1;
    /* Adjust tooltip opacity on hover */
    transition: opacity 0.2s ease-in-out;
    /* Optional: Smooth opacity transition */
  }

  .tooltip {
    position: absolute;
    top: 100%;
    /* Position the tooltip below the image */
    left: 50%;
    transform: translateX(-50%);
    /* Center the tooltip horizontally */
    padding: 5px 10px;
    background-color: rgba(0, 0, 0, 0.8);
    /* Semi-transparent black background */
    color: white;
    border-radius: 5px;
    font-size: 14px;
    white-space: nowrap;
    /* Prevent tooltip text wrapping */
    opacity: 0;
    /* Initially hide the tooltip */
    transition: opacity 0.2s ease-in-out;
    /* Optional: Smooth opacity transition */
  }


  .img1 {
    width: 11vw;
    height: 230px;
  }

  .img2 {
    width: 11vw;
    height: 80px;
  }

  .img4 {
    width: 11vw;
    height: 200px;
    margin-top: 15px;
  }

  .img3 {
    width: 11vw;
    height: 80px;
  }

  .flex-row {
    display: flex;
    flex-direction: row;
    gap: 20px;
  }

  .flex-col {
    display: flex;
    flex-direction: column;
  }

  @media (min-width: 768px) {
    .col-md-2 {
        max-width: fit-content!important;
    }
}

</style>

