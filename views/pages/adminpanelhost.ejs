<style>
    .tab-container {
        display: flex;
        flex-direction: column;
        border: 1px solid #ddd;
        margin: 20px auto;
        width: 100%;
        /* Adjust width as needed */
        background-color: whitesmoke;
    }

    .contact-form-wrap {
        padding: 0px !important;
    }

    .tabs {
        list-style: none;
        padding: 0;
        margin: 0;
        display: flex;
        border-bottom: 1px solid #ddd;
    }

    .tab {
        padding: 10px 20px;
        cursor: pointer;
        text-align: center;
    }

    .tab.active {
        background-color: gray;
        border-bottom: none;
        color: white;
    }

    .tab-content {
        flex: 1;
        padding: 20px;
    }

    .tab-pane {
        display: none;
    }

    .tab-pane.active {
        display: block;
    }
</style>

<div class="tab-container">
    <ul class="tabs">
        <li class="tab active" data-tab="Create Accomodations">Create Accomodations</li>
        <li class="tab" data-tab="Accomodations">Accomodations</li>
        <!-- <li class="tab" data-tab="Edit Accomodation">Edit Accomodation</li>
        <li class="tab" data-tab="Add New Accomodation Image">Add New Accomodation Image</li> -->
    </ul>
    <div class="tab-content">
        <div class="tab-pane active" data-tab="Create Accomodations">
            <%- include('../pages/adminsections/createAccomodation'); %>
        </div>
        <div class="tab-pane" data-tab="Accomodations">
            <%- include('../pages/adminsections/accomodationsList'); %>
        </div>
        <!-- <div class="tab-pane" data-tab="Edit Accomodation">
            <span style="color:orangered">Coming soon</span>
        </div>
        <div class="tab-pane" data-tab="Add New Accomodation Image">
            <span style="color:orangered">Coming soon</span>
        </div> -->
    </div>
</div>
<script>
    const tabContainer = document.querySelector('.tab-container');
    const tabs = document.querySelectorAll('.tab');
    const tabContent = document.querySelector('.tab-content');
    const tabPanes = document.querySelectorAll('.tab-pane');

    tabs.forEach(tab => {
        tab.addEventListener('click', function handleClick() {
            // Remove active classes from all tabs and content panes
            tabs.forEach(t => t.classList.remove('active'));
            tabPanes.forEach(pane => pane.classList.remove('active'));

            // Add active class to clicked tab and its corresponding content pane
            this.classList.add('active');
            console.log("Tab ", this.textContent)
            const activePane = document.querySelector(`.tab-pane[data-tab="${this.textContent}"]`);
            activePane.classList.add('active');
        });
    });

    // Optionally, set up initial active state if needed (based on default HTML structure)
    const initialActiveTab = document.querySelector('.tab.active');
    const initialActivePane = document.querySelector(`.tab-pane[data-tab="${initialActiveTab.textContent}"]`);
    if (initialActiveTab) initialActiveTab.classList.add('active');
    if (initialActivePane) initialActivePane.classList.add('active');

</script>